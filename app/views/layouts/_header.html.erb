<div class="navbar bg-base-100">
  <div class="flex-1">
    <a href="<%= root_path %>" class="btn btn-ghost normal-case text-xl">Family Book</a>
  </div>
  <div class="flex flex-row-reverse md:flex-row items-center">
    <div class="menu-trigger md:hidden">
      <button class="btn btn-ghost normal-case text-xl mr-4" onclick="toggleDropdown(this)">
        <%= image_tag("burger-menu.svg", class: "max-h-[40px] fill-white") %>
      </button>
    </div>
    <ul id="dropdown-menu" class="hidden md:flex menu menu-horizontal px-1 mr-4">
      <li><%= link_to "Family Tree", tree_path %></li>
      <li><%= link_to "Photos", photos_path %></li>
      <li><%= link_to "Birthdays", birthdays_path %></li>
      <li><%= link_to "Contact Us", contact_path %></li>
    </ul>
    <% if user_signed_in? %>
      <p class="hidden md:block pr-4"><%= current_user.email %></p>
      <div class="dropdown dropdown-end pr-4">
        <label tabindex="0" class="btn btn-primary btn-circle avatar">
          <div class="w-10 rounded-full">
            <% if current_user.avatar_url.present? %>
              <%= image_tag(current_user.avatar_url.url) %>
            <% end %>
          </div>
        </label>
        <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
          <li>
            <% if current_user.person.present? %>
              <a href="/people/<%= current_user.person.id  %>" class="justify-between">
                Profile
                <span class="badge">New</span>
              </a>
            <% end %>
          </li>
          <li><%= link_to "Edit #{current_user.email}", edit_user_registration_path %></li>
          <li>
            <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete } %>
          </li>
        </ul>
      </div>
    <% else %>
      <ul class="flex space-x-4">
        <li><%= link_to "Sign In", new_user_session_path, class: "btn btn-primary" %></li>
        <li><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary mr-4" %></li>
      </ul>
    <% end %>
  </div>
</div>
<script>
  function toggleDropdown(button) {
    var dropdown = document.getElementById("dropdown-menu");
    var image = button.querySelector('img');

    if (dropdown.style.display === "block") {
      dropdown.style.display = "none";
      // Change the SVG back to the burger menu
      image.src = "<%= asset_path('burger-menu.svg') %>";
    } else {
      dropdown.style.display = "block";
      // Change the SVG to an "X"
      image.src = "<%= asset_path('close.svg') %>"; // Replace with your "X" icon
    }
  }
</script>
