<!DOCTYPE html>
<html>
  <head>
    <title>Family Tree</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;700;800&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <script>
      document.documentElement.setAttribute('data-theme', window.localStorage.getItem('theme'))
    </script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="manifest" href="/manifest.json">
  </head>
  <body>
    <%= render "layouts/header" %>
    <% if notice %>
      <div class="flex justify-center">
        <p class="alert alert-success w-[250px]"><%= notice %></p>
      </div>
    <% end %>
    <% if alert %>
      <div class="flex justify-center">
        <p class="alert alert-error w-[250px]"><%= alert %></p>
      </div>
    <% end %>
    <%= yield %>
    <%= render "layouts/footer" %>
    <script
    id="search-js"
    defer
    src="https://api.mapbox.com/search-js/v1.0.0-beta.18/web.js"
></script>
    <script>
      document.addEventListener('turbo:load', function() {
        var savedTheme = localStorage.getItem('theme');
        if(savedTheme) {
          document.body.setAttribute('data-theme', savedTheme);
          var modeDisplayImage = document.getElementById('mode-display');
          if(modeDisplayImage) {
            modeDisplayImage.src = modeDisplayImage.getAttribute('data-' + savedTheme);
          }
          var burgerMenuImage = document.getElementById('burger-menu');
          if(burgerMenuImage) {
            burgerMenuImage.src = burgerMenuImage.getAttribute('data-' + savedTheme);
          }
          var chevronImages = document.getElementsByClassName('chevron-image');
          for(var i = 0; i < chevronImages.length; i++) {
            var newSrc = chevronImages[i].getAttribute('data-' + savedTheme);
            if(newSrc) {
              chevronImages[i].src = newSrc;
            }
          }
        }
      });
    </script>
  </body>
</html>
