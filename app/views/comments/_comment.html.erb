<div id="<%= dom_id comment %>">
  <div class="flex space-y-4 items-center">
    <div class="">
      <%= image_tag(comment.author.user.avatar_url.url, class: "w-[50px] h-[50px] rounded-full object-cover") %>
    </div>
    <div class="flex flex-col justify-start space-x-2 ml-4 flex-1">
      <p class="text-lg font-bold pl-2">
        <%= comment.author.first_name %>
      </p>
      <p class="text-lg">
        <%= comment.body %>
      </p>
    </div>
  </div>
</div>
