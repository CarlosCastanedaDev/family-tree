<h1 class="text-2xl text-center my-4">Family Members</h1>
<%= search_form_for @q do |f| %>
  <div class="flex flex-col items-center justify-center mb-4 mx-4">
    <div class="form-control w-full border border-slate-700 p-8 rounded-xl space-y-4 shadow-lg shadow-indigo-700/40 mb-8">
      <%= f.label :first_name_cont, "First name containing" %>
      <%= f.text_field :first_name_cont, class: "input input-bordered input-primary w-full max-w-xs placeholder:text-slate-600", :placeholder => "Enter a few characters" %>
    </div>
    <%= f.submit :class => "btn btn-primary" %>
    <button class="btn btn-ghost"><a href="/people">Clear filters</a></button>
  <% end %>
</div>
<div id="people" class="flex items-center justify-center">
  <ul class="flex flex-col justify-center w-full space-y-2">
    <% @people.each do |person| %>
      <li class="">
        <div class="flex items-center justify-center space-x-2 my-4 mx-1 min-h-[60px]">
          <div class="w-[50px] bg-slate-600 shadow-xl rounded-full">
            <figure><img src="https://robohash.org/<%= person.id %>" class="rounded-full" /></figure>
          </div>
          <h2 class="w-full max-w-[260px] pl-4"><%= person.first_name %> <%= person.last_name %> <%= person.suffix %></h2>
          <%= link_to person_path(person.id), class: "" do %>
            <%= image_tag("chevron.svg", class: "chevron-image max-h-[25px]", data: { light: asset_path('chevron-black.svg'), dark: asset_path('chevron.svg') }) %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
