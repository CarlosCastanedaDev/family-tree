<%# This view is the main node for each individual family i.e. Eduardo %>
<li class="md:w-[600px]">
  <%= link_to person_path(person.id), class: "" do %>
  <div class="flex items-center md:justify-center space-x-2 my-4 mx-1 min-h-[60px]">
    <div class="w-[50px] md:w-[100px] bg-slate-600 shadow-xl border-indigo-500 rounded-full">
      <figure><img src="https://robohash.org/<%= person.id %>" class="rounded-full" /></figure>
    </div>
    <h2 class="w-full max-w-[260px] md:max-w-[340px] md:text-xl px-4"><%= person.first_name %> <%= person.middle_name %> <%= person.last_name %> <%= person.suffix %></h2>
      <%= image_tag("chevron.svg", class: "chevron-image max-h-[25px]", data: { light: asset_path('chevron-black.svg'), dark: asset_path('chevron.svg') }) %>
  </div>
  <% end %>
</li>
