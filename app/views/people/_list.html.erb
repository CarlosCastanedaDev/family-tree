<%# This view is the main node for each individual family i.e. Eduardo %>
<li class="md:w-[600px]">
  <%= link_to person_path(person.id), class: "" do %>
    <div class="flex items-center md:justify-center space-x-2 my-4 mx-1 min-h-[60px]">
      <div class="w-12 md:w-24 bg-slate-600 shadow-xl border-indigo-500 rounded-full">
        <% if person&.user&.avatar_url&.present? %>
          <figure><img src="<%= person.user.avatar_url.url %>" class="w-12 h-12 md:w-24 md:h-24 object-cover rounded-full" /></figure>
        <% elsif person&.image_url&.present? %>
          <figure><img src="<%= person.image_url %>" class="w-12 h-12 md:w-24 md:h-24 object-cover rounded-full" /></figure>
        <% else %>
          <div class="w-12 h-12 md:w-24 md:h-24 bg-primary shadow-md border-indigo-500 rounded-full flex items-center justify-center text-lg md:text-2xl font-bold">
            <%= person.first_name.slice(0,1).capitalize %>
          </div>
        <% end %>
      </div>
      <h2 class="w-full max-w-[220px] md:max-w-[340px] md:text-xl px-4"><%= person.first_name %> <%= person.middle_name %> <%= person.last_name %> <%= person.suffix %></h2>
      <%= image_tag("chevron.svg", class: "chevron-image max-h-[25px]", data: { light: asset_path('chevron-black.svg'), dark: asset_path('chevron.svg') }) %>
    </div>
  <% end %>
</li>
