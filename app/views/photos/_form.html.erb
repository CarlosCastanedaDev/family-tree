<%= simple_form_for(@photo) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="flex justify-center">
    <div class="form-control w-full max-w-sm mx-4 border border-white p-4 rounded-xl space-y-12">
      <%= f.hidden_field :owner_id, 
              input_html: { value: current_user.id } %>
      <%= f.label :image_url, "Choose an image" %>
      <%= f.input :image_url,
              as: :file,
              input_html: { class: "file-input file-input-bordered file-input-primary w-full max-w-xs" } %>
      <%= f.input :caption,
              input_html: { class: "file-input file-input-bordered file-input-primary w-full max-w-xs" } %>
      <%= f.input :location,
              input_html: { class: "file-input file-input-bordered file-input-primary w-full max-w-xs" } %>
      <%= f.label :location, "Tag People" %>
      <%= f.collection_check_boxes :person_ids, Person.all, :id, :first_name %>
      <div class="form-actions flex justify-center">
        <%= f.button :submit, "Upload Photo", class: "btn btn-primary my-4" %>
      </div>
    </div>
  <% end %>
</div>
